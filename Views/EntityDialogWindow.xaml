<Window x:Class="FlowerShop.WpfClient.Views.EntityDialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight">

    <Border Padding="20" Background="{StaticResource BgMuted}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,12">
                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="SemiBold" Foreground="{StaticResource FgPrimary}"/>
                <TextBlock Text="{Binding Subtitle}" Opacity="0.7" Margin="0,4,0,0" Foreground="{StaticResource FgPrimary}"/>
            </StackPanel>

            <ContentControl Grid.Row="1" Content="{Binding}" Margin="0,0,0,16"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" MinWidth="90" Margin="0,0,10,0"
                        Command="{Binding CancelCommand}"/>
                <Button Content="{Binding OkText}" MinWidth="110"
                        Command="{Binding OkCommand}"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
